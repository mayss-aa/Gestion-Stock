{% extends 'base.html.twig' %}

{% block body %}
    {# Page Header Section #}
    <div class="page-header">
        <h3 class="page-title">Gestion des plantes</h3>
        <div class="header-actions">
            <a href="{{ path('app_produit_back_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Créer une nouvelle plante
            </a>
        </div>
    </div>

    {# Breadcrumb Navigation #}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">plantes</a></li>
            <li class="breadcrumb-item active" aria-current="page">Liste des plantes</li>
        </ol>
    </nav>

    {# Main Content Section #}
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des plantes</h4>
                    <div class="table-responsive" style="height: 400px; overflow-y: auto; overflow-x: auto;">
                        {# Produit Table #}
                        <table class="table table-striped table-hover">
            <thead class="thead-dark">
                <tr>
                    <th class="text-center">Nom</th>
                    <th class="text-center">Date de Plantation</th>
                    <th class="text-center">Rendement Estime</th>

                </tr>
            </thead>
             <tbody>
                {% for plante in plantes %}
                    <tr class="align-middle">
                        <td class="text-center">{{ plante.NomPlante }}</td>
                        <td class="text-center">{{ plante.DatePlantation|date('Y-m-d') }}</td>
                        <td class="text-center">{{ plante.RendementEstime }}</td>
                        <td class="text-center" >
                            <a href="{{ path('app_add_plante', {'id': plante.id}) }}" class="btn btn-sm border-secondary rounded-pill px-3 py-2 text-primary">Modifier</a>
                        </td>
                        <td class="text-center" >
                            <form method="post" action="{{ path('app_plante_supprimer', { 'id': plante.id }) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cette plante ?');">
                                <button type="submit" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center">Aucune plante trouvée</td>
                    </tr>
                {% endfor %}
            </tbody>
            </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
