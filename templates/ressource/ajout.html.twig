{% extends 'basefront.html.twig' %}

{% block title %}New Ressource{% endblock %}

{% block body %}
    <!-- Spinner Start -->
    <div id="spinner" class="show w-100 vh-100 bg-white position-fixed translate-middle top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-grow text-primary" role="status"></div>
    </div>
    <!-- Spinner End -->

    <!-- Navbar start -->
    <div class="container-fluid fixed-top">
        <div class="container topbar bg-primary d-none d-lg-block">
            <div class="d-flex justify-content-between">
                <div class="top-info ps-2">
                    <small class="me-3"><i class="fas fa-map-marker-alt me-2 text-secondary"></i> <a href="#" class="text-white">123 Street, New York</a></small>
                    <small class="me-3"><i class="fas fa-envelope me-2 text-secondary"></i><a href="#" class="text-white">Email@Example.com</a></small>
                </div>
                <div class="top-link pe-2">
                    <a href="#" class="text-white"><small class="text-white mx-2">Privacy Policy</small>/</a>
                    <a href="#" class="text-white"><small class="text-white mx-2">Terms of Use</small>/</a>
                    <a href="#" class="text-white"><small class="text-white ms-2">Sales and Refunds</small></a>
                </div>
            </div>
        </div>
        <div class="container px-0">
            <nav class="navbar navbar-light bg-white navbar-expand-xl">
                <a href="index.html" class="navbar-brand"><h1 class="text-primary display-6">Fruitables</h1></a>
                <button class="navbar-toggler py-2 px-3" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                    <span class="fa fa-bars text-primary"></span>
                </button>
                <div class="collapse navbar-collapse bg-white" id="navbarCollapse">
                    <div class="navbar-nav mx-auto">
                        <a href="index.html" class="nav-item nav-link">Home</a>
                        <a href="shop.html" class="nav-item nav-link">Shop</a>
                        <a href="shop-detail.html" class="nav-item nav-link">Shop Detail</a>
                        <div class="nav-item dropdown">
                            <a href="#" class="nav-link dropdown-toggle active" data-bs-toggle="dropdown">Pages</a>
                            <div class="dropdown-menu m-0 bg-secondary rounded-0">
                                <a href="cart.html" class="dropdown-item">Cart</a>
                                <a href="chackout.html" class="dropdown-item active">Chackout</a>
                                <a href="testimonial.html" class="dropdown-item">Testimonial</a>
                                <a href="404.html" class="dropdown-item">404 Page</a>
                            </div>
                        </div>
                        <a href="contact.html" class="nav-item nav-link">Contact</a>
                    </div>
                    <div class="d-flex m-3 me-0">
                        <button class="btn-search btn border border-secondary btn-md-square rounded-circle bg-white me-4" data-bs-toggle="modal" data-bs-target="#searchModal"><i class="fas fa-search text-primary"></i></button>
                        <a href="#" class="position-relative me-4 my-auto">
                            <i class="fa fa-shopping-bag fa-2x"></i>
                            <span class="position-absolute bg-secondary rounded-circle d-flex align-items-center justify-content-center text-dark px-1" style="top: -5px; left: 15px; height: 20px; min-width: 20px;">3</span>
                        </a>
                        <a href="#" class="my-auto">
                            <i class="fas fa-user fa-2x"></i>
                        </a>
                    </div>
                </div>
            </nav>
        </div>
    </div>
    <!-- Navbar End -->

    <!-- Page Header Start -->
    <div class="container-fluid page-header py-5">
        <h1 class="text-center text-white display-6">Gestion des Ressources</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Stock</a></li>
            <li class="breadcrumb-item active text-white">Ajouter une Ressource</li>
        </ol>
    </div>
    <!-- Page Header End -->

    <!-- Ressource Form Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <h1 class="mb-4">Ajouter une Ressource</h1>
            <div class="container m-5 p-4 shadow-lg">
                <style>
                    .required::after {
                        content: " *";
                        color: red;
                        font-weight: bold;
                    }
                    .text-danger {
                        color: red;
                        font-size: 0.875rem;
                        margin-top: 5px;
                    }
                </style>

                {{ form_start(form, {'attr': { 'novalidate': 'novalidate'}}) }}

                <div class="mb-3">
                    {{ form_label(form.nom_ressource, 'Nom de la ressource ', {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.nom_ressource, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom'}}) }}
                    <div class="text-danger">{{ form_errors(form.nom_ressource) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.type_ressource, 'Type de ressource ', {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.type_ressource, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le type'}}) }}
                    <div class="text-danger">{{ form_errors(form.type_ressource) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.quantite_ressource, 'Quantité ', {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.quantite_ressource, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la quantité'}}) }}
                    <div class="text-danger">{{ form_errors(form.quantite_ressource) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.unite_mesure, 'Unité de mesure ', {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.unite_mesure, {'attr': {'class': 'form-control', 'placeholder': 'Entrez l\'unité'}}) }}
                    <div class="text-danger">{{ form_errors(form.unite_mesure) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.date_ajout_ressource, 'Date d\'ajout *', {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.date_ajout_ressource, {'attr': {'class': 'form-control' ~ (form.date_ajout_ressource.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.date_ajout_ressource) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.date_expiration_ressource, 'Date d\'expiration', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.date_expiration_ressource, {'attr': {'class': 'form-control' ~ (form.date_expiration_ressource.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.date_expiration_ressource) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.statut_ressource, 'Statut ', {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.statut_ressource, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le statut'}}) }}
                    <div class="text-danger">{{ form_errors(form.statut_ressource) }}</div>
                </div>

                <div class="mb-3">
                    {{ form_label(form.depot, 'Dépôt ', {'label_attr': {'class': 'form-label required'}}) }}
                    {{ form_widget(form.depot, {'attr': {'class': 'form-select'}}) }}
                    <div class="text-danger">{{ form_errors(form.depot) }}</div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">{{ button_label|default('Enregistrer') }}</button>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
    <!-- Ressource Form End -->
   
{% endblock %}
