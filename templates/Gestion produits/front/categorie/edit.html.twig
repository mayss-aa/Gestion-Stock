{% extends 'basefront.html.twig' %}

{% block body %}
   

    <!-- Single Page Header start -->
    <div class="container-fluid page-header-zone py-5">
        <h1 class="text-center text-white display-6">Modifier la catégorie</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Pages</a></li>
            <li class="breadcrumb-item active text-white">Modification</li>
        </ol>
    </div>
    <!-- Single Page Header End -->

    <!-- Checkout Page Start -->
    <div class="container-fluid py-5">
        <div class="container py-5">
            <h1 class="text-center text-black display-6">Modifier la catégorie</h1>
            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row g-5">
            
               <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <!-- Nom de la categorie -->
                    <div class="form-item">
                        <label class="form-label my-3" for="id_categorie">Nom de la catégorie <sup>*</sup></label>
                        {{ form_widget(form.nom_categorie, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.nom_categorie) }}
                    </div>
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <!-- Description de la categorie -->
                    <div class="form-item">
                        <label class="form-label my-3" for="description_categorie">Description de la catégorie <sup>*</sup></label>
                        {{ form_widget(form.description_categorie, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.description_categorie) }}
                    </div>
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <!-- saisonDeRecolte  -->
                    <div class="form-item">
                        <label class="form-label my-3" for="saisonDeRecolte">saisonDeRecolte <sup>*</sup></label>
                        {{ form_widget(form.saisonDeRecolte, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.saisonDeRecolte) }}
                    </div>
                </div>
                 <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <!-- temperature  -->
                    <div class="form-item">
                        <label class="form-label my-3" for="temperatureIdeale">temperature Ideale <sup>*</sup></label>
                        {{ form_widget(form.temperatureIdeale, {'attr': {'class': 'form-control'}}) }}
                        {{ form_errors(form.temperatureIdeale) }}
                    </div>
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <!-- Bouton de soumission -->
                    <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary" id="valider-button">Mettre à jour</button>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
    <!-- Checkout Page End -->

    <!-- Footer same as new.html.twig -->
    <!-- ... -->

{% endblock %}
