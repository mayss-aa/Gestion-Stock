{% extends 'basefront.html.twig' %}
{% block body %}


    <!-- Single Page Header start -->
    <div class="container-fluid page-header-zone py-5">
        <h1 class="text-center text-white display-6">details du produit</h1>
        <ol class="breadcrumb justify-content-center mb-0">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="#">Pages</a></li>
            <li class="breadcrumb-item active text-white">Produits</li>
        </ol>
    </div>
    <!-- Single Page Header End -->
        <!-- Checkout Page Start -->
         
          <h1 class="text-center text-black display-6">Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom_produit</th>
                <td>{{ produit.nomProduit }}</td>
            </tr>
            <tr>
                <th>Cycle_culture</th>
                <td>{{ produit.cycleCulture }}</td>
            </tr>
            <tr>
                <th>Quantite_produit</th>
                <td>{{ produit.quantiteProduit }}</td>
            </tr>
            <tr>
                <th>Unite_quant_prod</th>
                <td>{{ produit.uniteQuantProd }}</td>
            </tr>
            <tr>
                <th>Date_semis_prod</th>
                <td>{{ produit.dateSemisProd ? produit.dateSemisProd|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Date_recolte_prod</th>
                <td>{{ produit.dateRecolteProd ? produit.dateRecolteProd|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Cree_le_prod</th>
                <td>{{ produit.creeLeProd ? produit.creeLeProd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Mis_a_jour_le_prod</th>
                <td>{{ produit.misAJourLeProd ? produit.misAJourLeProd|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>
     

    <a href="{{ path('app_produit_front_index') }}" class="btn btn-success">back to list</a>

    <a href="{{ path('app_produit_front_edit', {'id': produit.id}) }}"  class="btn btn-success">edit</a>
    <a href="{{ path('app_produit_front_delete',{'id': produit.id}) }}"  class="btn btn-success">delete</a>

  


        <!-- Checkout Page End -->
 
    {% endblock %}
