{% extends 'base.html.twig' %}

{% block body %}
    {# Page Header Section #}
    <div class="page-header">
        <h3 class="page-title">Gestion des Catégories</h3>
        <div class="header-actions"></div>
    </div>

    {# Breadcrumb Navigation #}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Utilisateurs</a></li>
            <li class="breadcrumb-item active" aria-current="page">Détails de la Catégorie</li>
        </ol>
    </nav>

    {# Main Content Section #}
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Détails de la Catégorie</h4>
                    <div class="table-responsive" style="height: 400px; overflow-y: auto; overflow-x: auto;">
                        {# Category Details Table #}
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>Nom de la Catégorie</th>
                                    <td>{{ categorie.nomCategorie }}</td>
                                </tr>
                                <tr>
                                    <th>Description de la Catégorie</th>
                                    <td>{{ categorie.descriptionCategorie }}</td>
                                </tr>
                                 <tr>
                <th> saisonDeRecolte</th>
                <td>{{ categorie.saisonDeRecolte}}</td>
            </tr>
             <tr>
                <th> temperatureIdele</th>
                <td>{{ categorie. temperatureIdeale}}</td>
            </tr>
                            </tbody>
                        </table>

                        {# Action Buttons #}
                        <div class="mt-4">
                            <a class="nav-link btn btn-success create-new-button" 
                               href="{{ path('app_categorie_back_index') }}" 
                               id="createbuttonDropdown" 
                               aria-expanded="false">
                                Retour à la liste
                            </a>
                            <a class="nav-link btn btn-success create-new-button mt-2" 
                               href="{{ path('app_categorie_back_edit', {'nom_categorie': categorie.nomCategorie}) }}" 
                               id="createbuttonDropdown" 
                               aria-expanded="false">
                                Modifier la Catégorie
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
