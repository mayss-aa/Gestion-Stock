{% extends 'base.html.twig' %}

{% block body %}

<div class="page-header">
    <h3 class="page-title">Gestion des Produits</h3>
    <div class="header-actions">
        <a class="nav-link btn btn-success create-new-button" href="{{ path('app_produit_back_new')}}" id="createbuttonDropdown" aria-expanded="false">+ Créer Produit</a>
    </div>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Produits</a></li>
            <li class="breadcrumb-item active" aria-current="page">Liste des Produits</li>
        </ol>
    </nav>
</div>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Liste des Produits</h4>
                <div class="table-responsive" style="height: 400px; overflow-y: auto; overflow-x: auto;">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Nom du Produit</th>
                                <th>Cycle de Culture</th>
                                <th>Quantité</th>
                                <th>Unité</th>
                                <th>Date de Semis</th>
                                <th>Date de Récolte</th>
                                <th>Créé le</th>
                                <th>Mise à Jour le</th>
                                <th>Catégorie</th>
                                <th>Modifier</th>
                                <th>Supprimer</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for produit in produits %}
                                <tr>
                                    <td>{{ produit.id }}</td>
                                    <td>{{ produit.nomProduit }}</td>
                                    <td>{{ produit.cycleCulture }}</td>
                                    <td>{{ produit.quantiteProduit }}</td>
                                    <td>{{ produit.uniteQuantProd }}</td>
                                    <td>{{ produit.dateSemisProd ? produit.dateSemisProd|date('Y-m-d') : '' }}</td>
                                    <td>{{ produit.dateRecolteProd ? produit.dateRecolteProd|date('Y-m-d') : '' }}</td>
                                    <td>{{ produit.creeLeProd ? produit.creeLeProd|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ produit.misAJourLeProd ? produit.misAJourLeProd|date('Y-m-d H:i:s') : '' }}</td>
                                    <td>{{ produit.categorie ? produit.categorie.nomCategorie : 'N/A' }}</td>
                                    <td>
                                        <a href="{{ path('app_produit_back_edit', {'id': produit.id }) }}" class="btn btn-outline-warning btn-icon-text edit-btn">
                                            Modifier <i class="mdi mdi-file-check btn-icon-append"></i>
                                        </a>
                                    </td>
                                    <td>
                                        <form method="post" action="{{ path('app_produit_back_delete', { 'id': produit.id }) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce dépôt ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ produit.id) }}">
                                                <button type="submit" class="btn btn-outline-danger">Supprimer</button>
                                            </form>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<style>
::-webkit-scrollbar {
    width: 10px;
}

::-webkit-scrollbar-track {
    background-color: #191c24;
    border-radius: 10px;
}

::-webkit-scrollbar-thumb {
    background-color: #888;
    border-radius: 10px;
    border: 2px solid #191c24;
}

#conseilAddedModal {
    position: fixed;
    top: 0px;
    right: 0px;
    z-index: 1050;
}

.scrollbar-color: #888 #191c24;
</style>

{% endblock %}