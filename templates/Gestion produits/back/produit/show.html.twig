{% extends 'base.html.twig' %}

{% block body %}
    {# Page Header Section #}
    <div class="page-header">
        <h3 class="page-title">Gestion des Catégories</h3>
        <div class="header-actions"></div>
    </div>

    {# Breadcrumb Navigation #}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Utilisateurs</a></li>
            <li class="breadcrumb-item active" aria-current="page">Détails du produit</li>
        </ol>
    </nav>

    {# Main Content Section #}
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Détails du produit</h4>
                    <div class="table-responsive" style="height: 400px; overflow-y: auto; overflow-x: auto;">
                        {# Category Details Table #}
                        <table class="table table-hover">
                            <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ produit.id }}</td>
                                </tr>
                                <tr>
                                    <th>Nom_produit</th>
                                    <td>{{ produit.nomProduit }}</td>
                                </tr>
                                <tr>
                                    <th>Cycle_culture</th>
                                    <td>{{ produit.cycleCulture }}</td>
                                </tr>
                                <tr>
                                    <th>Quantite_produit</th>
                                    <td>{{ produit.quantiteProduit }}</td>
                                </tr>
                                <tr>
                                    <th>Unite_quant_prod</th>
                                    <td>{{ produit.uniteQuantProd }}</td>
                                </tr>
                                <tr>
                                    <th>Date_semis_prod</th>
                                    <td>{{ produit.dateSemisProd ? produit.dateSemisProd|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Date_recolte_prod</th>
                                    <td>{{ produit.dateRecolteProd ? produit.dateRecolteProd|date('Y-m-d') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Cree_le_prod</th>
                                    <td>{{ produit.creeLeProd ? produit.creeLeProd|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>Mis_a_jour_le_prod</th>
                                    <td>{{ produit.misAJourLeProd ? produit.misAJourLeProd|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                
                            </tbody>
                        </table>
                        {# Action Links #}
                        <div class="action-links">
                            <a href="{{ path('app_produit_back_index') }}">back to list</a>
                            <a href="{{ path('app_produit_back_edit', {'id': produit.id}) }}">editer produit</a>
                        
                      
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}
