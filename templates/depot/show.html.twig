{% extends 'basefront.html.twig' %}

{% block title %}Détails du Dépôt{% endblock %}

{% block body %}
<div class="container col-5 mt-5">
    <div class="card shadow-lg border-0 text-center">
        <div class="card-body">
            <h3 class="card-title text-center">{{ depot.nomDepot }}</h3>
            <h6 class="card-subtitle text-muted text-center">{{ depot.localisationDepot }}</h6>
            <hr>
            <p class="card-text">
                <strong>Capacité:</strong> {{ depot.capaciteDepot }} {{ depot.uniteCapDepot }}<br>
                <strong>Type de stockage:</strong> {{ depot.typeStockageDepot }}<br>
                <strong>Statut:</strong> {{ depot.statutDepot }}
            </p>
            <div class="mt-3">
                <a href="{{ path('app_depot_edit', {'id': depot.id}) }}" class="btn btn-warning">Modifier</a>
            </div>
            <div class="mt-3">
                <form action="{{ path('app_depot_delete', {'id': depot.id}) }}" method="post" style="display:inline;">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce dépôt ?')">
                        Supprimer
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<hr>
<h1 class="text-center">Liste des Ressources dans le Dépôt</h1>
<hr>

<div class="row mt-5">
    {% for ressource in depot.ressource %}
        <div class="col-md-3 mb-4 m-4">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <h5 class="card-title">{{ ressource.nomRessource }}</h5>
                    <h6 class="card-subtitle text-muted">{{ ressource.typeRessource }}</h6>
                    <p class="card-text mt-2">
                        <strong>Quantité:</strong> {{ ressource.quantiteRessource }} {{ ressource.uniteMesure }}<br>
                        <strong>Ajouté le:</strong> {{ ressource.dateAjoutRessource|date('Y-m-d') }}<br>
                        <strong>Expiration:</strong> {{ ressource.dateExpirationRessource|date('Y-m-d') }}
                    </p>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
{% endblock %}
