            <script src="{{ asset('Front/assets/lib/easing/easing.min.js') }}"></script>
            <script src="{{ asset('Front/assets/lib/waypoints/waypoints.min.js') }}"></script>
            <script src="{{ asset('Front/assets/lib/lightbox/js/lightbox.min.js') }}"></script>
