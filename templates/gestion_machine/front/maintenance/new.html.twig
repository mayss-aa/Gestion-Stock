{% extends 'basefront.html.twig' %}

{% block title %}Ajouter Maintenance{% endblock %}

{% block body %}

   




        <!-- Single Page Header start -->
        <div class="container-fluid page-header-maintenance py-5">
            <h1 class="text-center text-white display-6">Gestion des Maintenance</h1>
            <ol class="breadcrumb justify-content-center mb-0">
                <li class="breadcrumb-item"><a href="#">Home</a></li>
                <li class="breadcrumb-item"><a href="#">Maintenance</a></li>
                <li class="breadcrumb-item active text-white">Ajouter Maintenance</li>
            </ol>
        </div>
        <!-- Single Page Header End -->


        <!-- Form Page Start -->


{# templates/machine/new.html.twig #}


<div class="container mt-5">
    <div class="row justify-content-center">
        <h1 class="mb-5 text-center">Créer une nouvelle maintenance</h1>
        <div class="col-md-6">
            {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }} {# ,{'attr': {'novalidate': 'novalidate'}} #}

            <div class="mb-4">
                {{ form_row(form.machine, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la machine'}}) }}
            </div>

            <div class="mb-4">
                {{ form_row(form.date_maintenance, {'attr': {'class': 'form-control', 'placeholder': 'Date de maintenance'}}) }}
            </div>

            <div class="mb-4">
                {{ form_row(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description de la maintenance'}}) }}
            </div>

            <div class="mb-4">
                {{ form_row(form.cout_maintenance, {'attr': {'class': 'form-control', 'placeholder': 'Coût de maintenance'}}) }}

                {% if form.cout_maintenance.vars.errors|length > 0 %}
            <div class="text-danger">
                {{ form_errors(form.cout_maintenance) }}
            </div>
                 {% endif %}
            </div>

            <button type="submit" class="btn btn-primary w-100 py-3">Valider</button>

            {{ form_end(form) }}
        </div>
    </div>
</div>

                 
        <!-- Form Page End -->


       
 {% endblock %}