{% extends 'basefront.html.twig' %}

{% block title %}Modifier la Machine{% endblock %}

{% block body %}
<h1 class="mb-4">Modifier la Machine</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                {{ form_start(form) }}
                <div class="mb-3">
                    {{ form_row(form.nom_machine, {'attr': {'class': 'form-control', 'placeholder': 'Nom de la machine'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.etat_machine, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.brand_machine, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.date_achat, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button type="submit" class="btn btn-primary w-100">Modifier</button>
                {{ form_end(form) }}
            </form>
        </div>
    </div>
</div>

<a href="{{ path('machine_list') }}" class="btn btn-secondary mt-3">Retour Ã  la liste</a>

{% endblock %}
