{% extends 'base.html.twig' %}

{% block body %}
    {# Page Header Section #}
    <div class="page-header">
        <h3 class="page-title">Gestion des Maintenances</h3>
        <div class="header-actions">
            <a class="btn btn-primary" href="{{ path('maintenance_new') }}">+ Ajouter Maintenance</a>
        </div>
    </div>

    {# Breadcrumb Navigation #}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Maintenances</a></li>
            <li class="breadcrumb-item active" aria-current="page">Liste des Maintenances</li>
        </ol>
    </nav>

    {# Main Content Section #}
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des Maintenances</h4>
                    <div class="table-responsive" style="height: 400px; overflow-y: auto; overflow-x: auto;">
                        {# Maintenances List Table #}
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Machine</th>
                                    <th>État de la Machine</th>
                                    <th>Date de Maintenance</th>
                                    <th>Coût de Maintenance</th>
                                    <th>Description</th>
                                    <th>Actions</th>    
                                </tr>
                            </thead>
                            <tbody>
                                {% for maintenance in maintenances %}
                                    <tr>
                                        <td>{{ maintenance.id }}</td>
                                        <td>{{ maintenance.machine.nomMachine }}</td>
                                        <td>{{ maintenance.machine.etatMachine ? maintenance.machine.etatMachine : 'Non spécifié' }}</td>
                                        <td>{{ maintenance.dateMaintenance ? maintenance.dateMaintenance|date('d/m/Y') : 'Non spécifiée' }}</td>
                                        <td>{{ maintenance.coutMaintenance ? maintenance.coutMaintenance|number_format(2, ',', ' ') : 'Non spécifié' }} DT</td>
                                        <td>{{ maintenance.description }}</td>
                                        <td>
                                            <a href="{{ path('backoffice_maintenance_edit', { 'id': maintenance.id }) }}" class="btn btn-outline-warning">Modifier</a>
                                            <form method="post" action="{{ path('backoffice_maintenance_delete', { 'id': maintenance.id }) }}" style="display:inline;" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette maintenance ?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ maintenance.id) }}">
                                                <button type="submit" class="btn btn-outline-danger">Supprimer</button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center text-muted">Aucune maintenance enregistrée.</td>
                                    </tr>
                                {% endfor %}
                                        {% for message in app.flashes('successamen') %}
    <div class="alert alert-success">
        {{ message }}
    </div>
{% endfor %}

{% for message in app.flashes('erroramen') %}
    <div class="alert alert-danger">
        {{ message }}
    </div>
{% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
