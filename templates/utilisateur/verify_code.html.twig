{# templates/login.html.twig #}


{% block title %}Login page{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <link rel="stylesheet" href="{{ asset('Dash_Admin/assets/css/login.css')}}">
{% endblock %}

{% block body %}

      <div class="container" id="container">
        
        <div class="form-container sign-in">
            <h1>Forgot password !</h1>
            
            <form action="{{ path('verify_code') }}" method="POST"> {# Assuming app_forgot is the route for handling forgot password #}
                <input type="text" name="code" placeholder="code">
                <button class="btn btn-lg btn-primary" type="submit"> verify code </button>
            </form>
        </div>

    </div>

    <script src="{{ asset('Dash_Admin/assets/js/script.js')}}"></script>
{% endblock %}
