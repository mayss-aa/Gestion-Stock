{% extends 'basefront.html.twig' %}

{% block title %}Depot index{% endblock %}
{% block body %}
<div class="container mt-5 pt-5"> <!-- Main content padding -->
    <h1 class="text-center my-5 py-5">Les Depots</h1> <!-- Extra top padding for the title -->
    <div class="table-responsive">
        <table class="table table-hover shadow-sm border-0">
            <thead class="thead-dark">
                <tr>
                    <th>Nom Depot</th>
                    <th>Localisation</th>
                    <th>Capacité</th>
                    <th>Unité</th>
                    <th>Type Stockage</th>
                    <th>Statut</th>
                    <th>Utilisation actuelle (m³)</th>
                    <th>Taux d'augmentation (m³/jour)</th>
                    <th>Actions</th>
                    
                </tr>
            </thead>
            <tbody>
            {% for depot in depots %}
                <tr class="align-middle">
                    <td>{{ depot.nomDepot }}</td>
                    <td>{{ depot.localisationDepot }}</td>
                    <td>{{ depot.capaciteDepot }}</td>
                    <td><span class="bg-primary p-2" style="border-radius: 15px;">{{ depot.uniteCapDepot }}</span></td>
                    <td>{{ depot.typeStockageDepot }}</td>
                    <td>{{ depot.statutDepot }}</td>
                   <td>{{ depot.getUtilisationActuelle() }} m³</td>  {# Affichage de l'utilisation actuelle #}
                   <td>{{ depot.getTauxAugmentation() }} m³/jour</td>  {# Affichage du taux d'augmentation #}
<td>
    <!-- Bouton Voir avec une nouvelle couleur -->
    <a href="{{ path('app_depot_show', {'id': depot.id}) }}" class="btn btn-success btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Voir le dépôt">
        <i class="bi bi-eye"></i> Voir
    </a>

    <!-- Bouton Editer avec une nouvelle couleur -->
    <a href="{{ path('app_depot_edit', {'id': depot.id}) }}" class="btn btn-info btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Modifier le dépôt">
        <i class="bi bi-pencil"></i> Modifier
    </a>

    <!-- Formulaire de suppression avec une nouvelle couleur -->
    <form action="{{ path('app_depot_delete', {'id': depot.id}) }}" method="post" style="display:inline;">
        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Voulez-vous vraiment supprimer ce dépôt ?')" data-bs-toggle="tooltip" data-bs-placement="top" title="Supprimer le dépôt">
            <i class="bi bi-trash"></i> Supprimer
        </button>
    </form>

    <!-- Bouton Prédiction avec une nouvelle couleur -->
    <a href="{{ path('app_depot_prevision', {'id': depot.id}) }}" class="btn btn-warning btn-sm" data-bs-toggle="tooltip" data-bs-placement="top" title="Voir la prédiction">
        <i class="bi bi-lightning"></i> Prédiction
    </a>
</td>

                </tr>
            {% else %}
                <tr>
                    <td colspan="7" class="text-center">Aucun dépôt trouvé</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_depot_new') }}" class="btn btn-success">Créer un nouveau dépôt</a>
    </div>
</div>
{% endblock %}
