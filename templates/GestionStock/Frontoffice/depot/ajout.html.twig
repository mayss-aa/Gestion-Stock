{% extends 'basefront.html.twig' %}

{% block title %}Ajouter un Dépôt{% endblock %}


{% block stylesheets %}

    {{ parent() }}  <!-- Inclut tous les autres fichiers CSS hérités -->
    <link href="{{ asset('Front/assets/css/style.css') }}" rel="stylesheet">  <!-- Assurez-vous que le fichier CSS est bien chargé -->
{% endblock %}

{% block body %}

   
















    <!-- Single Page Header Start -->
  <div class="page-header-depot py-5">
    <h1 class="text-center text-white display-6">Gestion des Dépôts</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="{{ path('app_depot_list') }}">Depots</a></li> <!-- Lien vers la Liste des Dépôts -->
        <li class="breadcrumb-item"><a href="{{ path('app_ressource_index') }}">Ressources</a></li> <!-- Lien vers la Liste des Ressources -->
       
    </ol>
</div>
    <!-- Single Page Header End -->

  <!-- Stock Form Start -->
<div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center w-100">
            <h1 class="mb-4" style="font-size: 2rem;">Ajouter un Dépôt</h1>
        </div>
        {{ form_start(form, {'attr': { 'novalidate': 'novalidate'}}) }}
        
        <div class="row g-5">
            <div class="col-md-12 col-lg-12 col-xl-13">
                <!-- Nom du Dépôt -->
                <div class="form-item">
                    <label class="form-label my-3" for="nom_depot" style="font-size: 1.75rem; text-align: center;">Nom du Dépôt<sup>*</sup></label>
                    {{ form_widget(form.nom_depot, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.nom_depot) }}</div>
                </div>

                <!-- Localisation -->
                <div class="form-item">
                    <label class="form-label my-3" for="localisation_depot" style="font-size: 1.75rem; text-align: center;">Localisation<sup>*</sup></label>
                    {{ form_widget(form.localisation_depot, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.localisation_depot) }}</div>
                </div>

                <!-- Capacité -->
                <div class="form-item">
                    <label class="form-label my-3" for="capacite_depot" style="font-size: 1.75rem; text-align: center;">Capacité<sup>*</sup></label>
                    {{ form_widget(form.capacite_depot, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.capacite_depot) }}</div>
                </div>

                <!-- Unité de Capacité -->
                <div class="form-item">
                    <label class="form-label my-3" for="unite_cap_depot" style="font-size: 1.75rem; text-align: center;">Unité de Capacité<sup>*</sup></label>
                    {{ form_widget(form.unite_cap_depot, {'attr': {'class': 'form-select'}}) }}
                    <div class="text-danger">{{ form_errors(form.unite_cap_depot) }}</div>
                </div>

                <!-- Type de Stockage -->
                <div class="form-item">
                    <label class="form-label my-3" for="type_stockage_depot" style="font-size: 1.75rem; text-align: center;">Type de Stockage<sup>*</sup></label>
                    {{ form_widget(form.type_stockage_depot, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.type_stockage_depot) }}</div>
                </div>

                <!-- Statut -->
                <div class="form-item">
                    <label class="form-label my-3" for="statut_depot" style="font-size: 1.75rem; text-align: center;">Statut<sup>*</sup></label>
                    {{ form_widget(form.statut_depot, {'attr': {'class': 'form-select'}}) }}
                    <div class="text-danger">{{ form_errors(form.statut_depot) }}</div>
                </div>

                <!-- Boutons Enregistrer et Annuler -->
                <div class="row g-4 pt-4 text-end">
                    <div class="col">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase text-primary w-auto">Valider</button>
                    </div>
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
</div>

    <!-- Stock Form End -->
{% endblock %}

