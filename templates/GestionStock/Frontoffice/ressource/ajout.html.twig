{% extends 'basefront.html.twig' %}

{% block title %} Ajouter Ressource{% endblock %}

{% block body %}
     <div class="page-header-depot py-5">
    <h1 class="text-center text-white display-6">Gestion des Ressource</h1>
    <ol class="breadcrumb justify-content-center mb-0">
        <li class="breadcrumb-item"><a href="{{ path('app_depot_list') }}">Depots</a></li> <!-- Lien vers la Liste des Dépôts -->
        <li class="breadcrumb-item"><a href="{{ path('app_ressource_index') }}">Ressources</a></li> <!-- Lien vers la Liste des Ressources -->
       
    </ol>
</div>
 <div class="container-fluid py-5">
    <div class="container py-5">
        <div class="text-center w-100">
            <h1 class="mb-4" style="font-size: 2rem;">Ajouter une Ressource</h1>
        </div>
        {{ form_start(form, {'attr': { 'novalidate': 'novalidate'}}) }}

        <div class="row g-5">
            <div class="col-md-12 col-lg-12 col-xl-13">
                <!-- Nom de la Ressource -->
                <div class="form-item">
                    <label class="form-label my-3" for="nom_ressource" style="font-size: 1.75rem; text-align: center;">Nom de la Ressource<sup>*</sup></label>
                    {{ form_widget(form.nom_ressource, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.nom_ressource) }}</div>
                </div>

                <!-- Type de Ressource -->
                <div class="form-item">
                    <label class="form-label my-3" for="type_ressource" style="font-size: 1.75rem; text-align: center;">Type de Ressource<sup>*</sup></label>
                    {{ form_widget(form.type_ressource, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.type_ressource) }}</div>
                </div>

                <!-- Quantité -->
                <div class="form-item">
                    <label class="form-label my-3" for="quantite_ressource" style="font-size: 1.75rem; text-align: center;">Quantité<sup>*</sup></label>
                    {{ form_widget(form.quantite_ressource, {'attr': {'class': 'form-control'}}) }}
                    <div class="text-danger">{{ form_errors(form.quantite_ressource) }}</div>
                </div>

                <!-- Unité de Mesure -->
                <div class="form-item">
                    <label class="form-label my-3" for="unite_mesure" style="font-size: 1.75rem; text-align: center;">Unité de Mesure<sup>*</sup></label>
                    {{ form_widget(form.unite_mesure, {'attr': {'class': 'form-select'}}) }}
                    <div class="text-danger">{{ form_errors(form.unite_mesure) }}</div>
                </div>

                <!-- Date d'ajout de la Ressource -->
                <div class="form-item">
                    <label class="form-label my-3" for="date_ajout_ressource" style="font-size: 1.75rem; text-align: center;">Date d'Ajout<sup>*</sup></label>
                    {{ form_widget(form.date_ajout_ressource, {'attr': {'class': 'form-control' ~ (form.date_ajout_ressource.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.date_ajout_ressource) }}</div>
                </div>

                <!-- Date d'expiration de la Ressource -->
                <div class="form-item">
                    <label class="form-label my-3" for="date_expiration_ressource" style="font-size: 1.75rem; text-align: center;">Date d'Expiration</label>
                    {{ form_widget(form.date_expiration_ressource, {'attr': {'class': 'form-control' ~ (form.date_expiration_ressource.vars.errors|length > 0 ? ' is-invalid' : '')}}) }}
                    <div class="invalid-feedback">{{ form_errors(form.date_expiration_ressource) }}</div>
                </div>

                <!-- Statut de la Ressource -->
                <div class="form-item">
                    <label class="form-label my-3" for="statut_ressource" style="font-size: 1.75rem; text-align: center;">Statut<sup>*</sup></label>
                    {{ form_widget(form.statut_ressource, {'attr': {'class': 'form-select'}}) }}
                    <div class="text-danger">{{ form_errors(form.statut_ressource) }}</div>
                </div>

                <!-- Dépôt -->
                <div class="form-item">
                    <label class="form-label my-3" for="depot" style="font-size: 1.75rem; text-align: center;">Dépôt<sup>*</sup></label>
                    {{ form_widget(form.depot, {'attr': {'class': 'form-select'}}) }}
                    <div class="text-danger">{{ form_errors(form.depot) }}</div>
                </div>

                <!-- Bouton Enregistrer -->
                <div class="row g-4 pt-4 text-end">
                    <div class="col">
                        <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase text-primary w-auto">Valider</button>
                    </div>
                </div>
            </div>
        </div>

        {{ form_end(form) }}
    </div>
</div>

{% endblock %}
