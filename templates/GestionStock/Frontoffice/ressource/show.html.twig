{% block title %}Ressource{% endblock %}

{% block body %}

   
    <div class="container col-4 mt-5 text-center">
        <div class="card shadow-lg border-0">
            <div class="card-body">
                <h3 class="card-title text-center">{{ ressource.nomRessource }}</h3>
                <h6 class="card-subtitle text-muted text-center">{{ ressource.typeRessource }}</h6>
                <hr>
                <p class="card-text">
                    <strong>ID:</strong> {{ ressource.id }}<br>
                    <strong>Quantit√©:</strong> {{ ressource.quantiteRessource }} {{ ressource.uniteMesure }}<br>
