</style>
<div class="container m-5 p-4 shadow-lg">
    {{ form_start(form, {'attr': { 'novalidate': 'novalidate'}}) }}

    <div class="mb-3">
        {{ form_label(form.nom_ressource, 'Nom de la ressource ', {'label_attr': {'class': 'form-label required'}}) }}
