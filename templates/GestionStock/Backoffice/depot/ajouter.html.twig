{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid py-5">
        <div class="container py-5">
            <div class="text-center w-100">
                <h1 class="mb-4 mt-5">Ajouter un Dépôt</h1>
            </div>

            {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
            <div class="row g-5">
                <!-- Depot Information Section -->
                <div class="col-md-12 col-lg-6 col-xl-7">
                    <!-- Depot Name -->
                    <div class="form-item">
                        <label class="form-label my-3" for="nom_depot">Nom du Dépôt <sup>*</sup></label>
                        {{ form_widget(form.nom_depot, {'attr': {'class': 'form-control', 'placeholder': 'Entrez le nom du dépôt'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.nom_depot) }}
                        </div>
                    </div>

                    <!-- Depot Location -->
                    <div class="form-item">
                        <label class="form-label my-3" for="localisation_depot">Localisation <sup>*</sup></label>
                        {{ form_widget(form.localisation_depot, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la localisation du dépôt'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.localisation_depot) }}
                        </div>
                    </div>

                    <!-- Depot Capacity -->
                    <div class="form-item">
                        <label class="form-label my-3" for="capacite_depot">Capacité <sup>*</sup></label>
                        {{ form_widget(form.capacite_depot, {'attr': {'class': 'form-control', 'placeholder': 'Entrez la capacité du dépôt'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.capacite_depot) }}
                        </div>
                    </div>

                    <!-- Unit of Capacity -->
                    <div class="form-item">
                        <label class="form-label my-3" for="unite_cap_depot">Unité de Capacité <sup>*</sup></label>
                        {{ form_widget(form.unite_cap_depot, {'attr': {'class': 'form-control', 'placeholder': 'Sélectionnez l\'unité de capacité'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.unite_cap_depot) }}
                        </div>
                    </div>

                    <!-- Storage Type -->
                    <div class="form-item">
                        <label class="form-label my-3" for="type_stockage_depot">Type de Stockage <sup>*</sup></label>
                        {{ form_widget(form.type_stockage_depot, {'attr': {'class': 'form-control', 'placeholder': 'Sélectionnez le type de stockage'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.type_stockage_depot) }}
                        </div>
                    </div>

                    <!-- Status of Depot -->
                    <div class="form-item">
                        <label class="form-label my-3" for="statut_depot">Statut <sup>*</sup></label>
                        {{ form_widget(form.statut_depot, {'attr': {'class': 'form-control', 'placeholder': 'Sélectionnez le statut du dépôt'}}) }}
                        <div class="text-danger">
                            {{ form_errors(form.statut_depot) }}
                        </div>
                    </div>

                    <!-- Submit Button -->
                    <div class="row g-4 pt-4">
                        <div class="col-12 text-center">
                            <button type="submit" class="btn btn-primary py-3 px-4 text-uppercase w-100" id="valider-button">
                                Ajouter
                            </button>
                        </div>
                    </div>
                </div>
            </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
