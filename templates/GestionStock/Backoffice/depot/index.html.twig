{% extends 'base.html.twig' %}

{% block body %}
    {# Page Header Section #}
    <div class="page-header">
        <h3 class="page-title">Gestion des Dépôts</h3>
        <div class="header-actions">
            <a href="{{ path('backoffice_depot_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Créer un nouveau dépôt
            </a>
        </div>
    </div>

    {# Breadcrumb Navigation #}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Dépôts</a></li>
            <li class="breadcrumb-item active" aria-current="page">Liste des Dépôts</li>
        </ol>
    </nav>

    {# Main Content Section #}
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des Dépôts</h4>
                    <div class="table-responsive" style="height: 400px; overflow-y: auto; overflow-x: auto;">
                        {# Depot Table #}
                        <table class="table table-striped table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Nom du Dépôt</th>
                                    <th>Localisation</th>
                                    <th>Capacité</th>
                                    <th>Unité</th>
                                    <th>Type de stockage</th>
                                    <th>Statut</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for depot in depots %}
                                    <tr>
                                        <td>{{ depot.id }}</td>
                                        <td>{{ depot.nomDepot }}</td>  <!-- Utilisation du getter getNomDepot() -->
                                        <td>{{ depot.localisationDepot }}</td>  <!-- Utilisation du getter getLocalisationDepot() -->
                                        <td>{{ depot.capaciteDepot }}</td> <!-- Utilisation du getter getCapaciteDepot() -->
                                        <td>{{ depot.uniteCapDepot }}</td> <!-- Utilisation du getter getUniteCapDepot() -->
                                        <td>{{ depot.typeStockageDepot }}</td> <!-- Utilisation du getter getTypeStockageDepot() -->
                                        <td>{{ depot.statutDepot }}</td> <!-- Utilisation du getter getStatutDepot() -->
                                        <td class="d-flex gap-2">
                                            <a href="{{ path('backoffice_depot_show', {'id': depot.id}) }}" class="btn btn-info btn-sm text-white">
                                                <i class="bi bi-eye"></i> Voir
                                            </a>
                                            <a href="{{ path('backoffice_depot_edit', {'id': depot.id}) }}" class="btn btn-warning btn-sm text-white">
                                                <i class="bi bi-pencil"></i> Modifier
                                            </a>
                                            <form action="{{ path('backoffice_depot_delete', {'id': depot.id}) }}" method="post" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ depot.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Voulez-vous vraiment supprimer ce dépôt ?')">
                                                    <i class="bi bi-trash"></i> Supprimer
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="8">Aucun dépôt trouvé</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
