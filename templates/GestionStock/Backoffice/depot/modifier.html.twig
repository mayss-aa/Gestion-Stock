{% extends 'base.html.twig' %}

{% block body %}
    {# Page Header Section #}
    <div class="page-header">
        <h3 class="page-title">Mettre à Jour le Dépôt</h3>
        <div class="header-actions"></div>
    </div>

    {# Breadcrumb Navigation #}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Mise à jour</a></li>
            <li class="breadcrumb-item active" aria-current="page">Dépôt</li>
        </ol>
    </nav>

    {# Main Form Section #}
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Modifier le Dépôt</h4>
                    <div class="table-responsive" style="height: 400px; overflow-y: auto; overflow-x: auto;">
                        {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

                        {# Nom du Dépôt #}
                        <div class="form-group row g-4 text-center align-items-center justify-content-center pt-4">
                            <label class="form-label my-3" for="nom_depot">Nom du Dépôt <sup>*</sup></label>
                            {{ form_widget(form.nom_depot, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.nom_depot) }}
                        </div>

                        {# Localisation du Dépôt #}
                        <div class="form-group row g-4 text-center align-items-center justify-content-center pt-4">
                            <label class="form-label my-3" for="localisation_depot">Localisation du Dépôt <sup>*</sup></label>
                            {{ form_widget(form.localisation_depot, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.localisation_depot) }}
                        </div>

                        {# Capacité du Dépôt #}
                        <div class="form-group row g-4 text-center align-items-center justify-content-center pt-4">
                            <label class="form-label my-3" for="capacite_depot">Capacité du Dépôt <sup>*</sup></label>
                            {{ form_widget(form.capacite_depot, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.capacite_depot) }}
                        </div>

                        {# Unité de Capacité #}
                        <div class="form-group row g-4 text-center align-items-center justify-content-center pt-4">
                            <label class="form-label my-3" for="unite_cap_depot">Unité de Capacité <sup>*</sup></label>
                            {{ form_widget(form.unite_cap_depot, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.unite_cap_depot) }}
                        </div>

                        {# Type de Stockage #}
                        <div class="form-group row g-4 text-center align-items-center justify-content-center pt-4">
                            <label class="form-label my-3" for="type_stockage_depot">Type de Stockage <sup>*</sup></label>
                            {{ form_widget(form.type_stockage_depot, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.type_stockage_depot) }}
                        </div>

                        {# Statut du Dépôt #}
                        <div class="form-group row g-4 text-center align-items-center justify-content-center pt-4">
                            <label class="form-label my-3" for="statut_depot">Statut du Dépôt <sup>*</sup></label>
                            {{ form_widget(form.statut_depot, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.statut_depot) }}
                        </div>

                        {# Submit Button #}
                        <div class="form-group row g-4 text-center align-items-center justify-content-center pt-4">
                            <button type="submit" class="btn border-secondary py-3 px-4 text-uppercase w-100 text-primary" id="valider-button">
                                Mettre à jour
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
