{% extends 'base.html.twig' %}

{% block body %}
    {# Page Header Section #}
    <div class="page-header">
        <h3 class="page-title">Gestion des Ressources</h3>
        <div class="header-actions">
            <a href="{{ path('backoffice_ressource_new') }}" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Ajouter une nouvelle ressource
            </a>
        </div>
    </div>

    {# Breadcrumb Navigation #}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="#">Ressources</a></li>
            <li class="breadcrumb-item active" aria-current="page">Liste des Ressources</li>
        </ol>
    </nav>

    {# Main Content Section #}
    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Liste des Ressources</h4>
                    <div class="table-responsive" style="height: 400px; overflow-y: auto; overflow-x: auto;">
                        {# Ressource Table #}
                        <table class="table table-striped table-hover">
                            <thead class="thead-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Nom</th>
                                    <th>Type</th>
                                    <th>Quantité</th>
                                    <th>Unité</th>
                                    <th>Date d'Ajout</th>
                                    <th>Date d'Expiration</th>
                                    <th>Statut</th>
                                    <th>Dépôt</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for ressource in ressources %}
                                    <tr>
                                        <td>{{ ressource.id }}</td>
                                        <td>{{ ressource.getNomRessource() }}</td>
                                        <td>{{ ressource.getTypeRessource() }}</td>
                                        <td>{{ ressource.getQuantiteRessource() }}</td>
                                        <td>{{ ressource.getUniteMesure() }}</td>
                                        <td>{{ ressource.getDateAjoutRessource() ? ressource.getDateAjoutRessource()|date('d/m/Y') : '' }}</td>
                                        <td>{{ ressource.getDateExpirationRessource() ? ressource.getDateExpirationRessource()|date('d/m/Y') : '' }}</td>
                                        <td>{{ ressource.getStatutRessource() }}</td>
                                        <td>{{ ressource.getDepot() ? ressource.getDepot().getNomDepot() : '' }}</td>
                                        <td class="d-flex gap-2">
                                            <a href="{{ path('backoffice_ressource_show', {'id': ressource.id}) }}" class="btn btn-info btn-sm text-white">
                                                <i class="bi bi-eye"></i> Voir
                                            </a>
                                            <a href="{{ path('backoffice_ressource_edit', {'id': ressource.id}) }}" class="btn btn-warning btn-sm text-white">
                                                <i class="bi bi-pencil"></i> Modifier
                                            </a>
                                            <form action="{{ path('backoffice_ressource_delete', {'id': ressource.id}) }}" method="post" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ ressource.id) }}">
                                                <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette ressource ?')">
                                                    <i class="bi bi-trash"></i> Supprimer
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="10">Aucune ressource trouvée</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
